{
  "manifest_version": 2,
  "name": "Wiki-o'-My-Thumb",
  "version": "2",

  "browser_action": {
      "browser_style": true,
      "default_popup": "popup/player-name.html",
      "default_icon": {
        "16": "images/icon16.png",
        "24": "images/icon24.png",
        "32": "images/icon32.png"
      }
    },

  "content_scripts": [
    {
      "matches": [
        "*://*.wikipedia.org/*"
      ],
      "js": ["jquery-3.1.1.min.js", "content.js"]
    }
  ],

  "background": {
    "scripts": ["jspdf-1.3.2.min.js", "background.js"]
  }
}
